# Face Recognition Attendance System - Raspberry Pi Configuration
# Copy this file to .env and fill in your values

# Device Identity
DEVICE_UUID=a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a11
DEVICE_NAME=PI-LAB301
CLASSROOM_ID=LAB-301

# Cloud API Configuration
API_BASE_URL=https://api.attendance.example.com
API_VERSION=v1
API_KEY=your_api_key_here
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Schedule Sync Settings
SYNC_INTERVAL_MINUTES=10
PRELOAD_MINUTES=15

# Camera Settings
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
FRAME_SKIP=3
FRAME_SCALE=0.25

# Face Recognition Settings
RECOGNITION_MODEL=hog
RECOGNITION_THRESHOLD=0.6
MIN_FACE_SIZE=50

# Debouncing (seconds)
DEBOUNCE_SECONDS=30

# Local Queue Settings
LOCAL_DB_PATH=./data/local_queue.db
BATCH_SIZE=10
BATCH_INTERVAL_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/pi_client.log
